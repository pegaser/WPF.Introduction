<Window x:Class="GraphicsAndAnimation.Animation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicsAndAnimation"
        mc:Ignorable="d"
        Title="Animation" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Rectangle Name="MyRectangle" Width="100"  Height="100" Fill="Blue">
                <Rectangle.Triggers>
                    <!-- Animates the rectangle's opacity. -->
                    <EventTrigger RoutedEvent="Rectangle.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="MyRectangle"  Storyboard.TargetProperty="Opacity" From="1.0" To="0.0" Duration="0:0:5"  AutoReverse="True" RepeatBehavior="Forever" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Rectangle.Triggers>
            </Rectangle>
        </StackPanel>
        
    </Grid>
</Window>
